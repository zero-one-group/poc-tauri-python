{
    "$schema": "https://github.com/tauri-apps/tauri/releases/download/tauri-build-v1.5.0/schema.json",
    "build": {
        "beforeDevCommand": "pnpm before-dev",
        "beforeBuildCommand": "pnpm before-build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist",
        "withGlobalTauri": false
    },
    "package": {
        "productName": "Tauri Python",
        "version": "0.1.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "shell": {
                "all": false,
                "open": "^(.+)/([^/]+)$"
            },
            "fs": {
                "all": true,
                "scope": ["$RESOURCE/*", "$HOME/Tauri Python/*"]
            },
            "http": {
                "all": false,
                "request": true,
                "scope": [
                    "https://github.com/zero-one-group/poc-tauri-python/*",
                    "https://raw.githubusercontent.com/zero-one-group/poc-tauri-python/*"
                ]
            },
            "notification": {
                "all": true
            },
            "window": {
                "all": true
            },
            "dialog": {
                "all": true
            }
        },
        "bundle": {
            "active": true,
            "category": "Productivity",
            "identifier": "com.zero-one-group.tauri-python",
            "copyright": "Copyright Â© 2024 Zero One Group",
            "publisher": "Zero One Group",
            "shortDescription": "",
            "longDescription": "",
            "resources": [],
            "targets": ["app", "dmg", "nsis", "deb", "appimage", "updater"],
            "macOS": {
                "minimumSystemVersion": "10.13",
                "frameworks": [],
                "license": "",
                "exceptionDomain": "",
                "entitlements": "Info.plist",
                "providerShortName": null,
                "signingIdentity": null
            },
            "windows": {
                "allowDowngrades": true,
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256"
            },
            "deb": {
                "files": {},
                "depends": []
            },
            "appimage": {
                "bundleMediaFramework": false
            },
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ]
        },
        "security": {
            "csp": "default-src 'self'; connect-src ipc: http://ipc.localhost"
        },
        "updater": {
            "active": true,
            "dialog": false,
            "endpoints": [
                "https://raw.githubusercontent.com/zero-one-group/poc-tauri-python/main/updates.json"
            ],
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQ5OUZENzlGMDlDREM2NzEKUldSeHhzMEpuOWVmMlhEeTB2cm10czFRUEZkSWhoMVZTc3JUemJmdVphYUhHaFFSUFVWYUsyaVMK",
            "windows": {
                "installMode": "basicUi",
                "installerArgs": []
            }
        },
        "macOSPrivateApi": true,
        "systemTray": null,
        "windows": []
    }
}
