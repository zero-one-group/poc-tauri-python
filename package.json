{
    "name": "tauri-python",
    "private": true,
    "version": "0.1.0",
    "type": "module",
    "scripts": {
        "build": "tsc && vite build",
        "before-dev": "pnpm sync-types && vite",
        "before-build": "pnpm sync-types && pnpm build",
        "generate:icons": "tauri icon ./public/app-icon.png",
        "generate:signkey": "tauri signer generate -w .tauri/tauri-python_signer.key",
        "build:mac:x64": "dotenv -e .env -- tauri build --target x86_64-apple-darwin",
        "build:mac:arm": "dotenv -e .env -- tauri build --target aarch64-apple-darwin",
        "build:mac:universal": "dotenv -e .env -- tauri build --target universal-apple-darwin",
        "build:win:x64": "dotenv -e .env -- tauri build --target x86_64-pc-windows-msvc",
        "build:win:arm": "dotenv -e .env -- tauri build --target aarch64-pc-windows-msvc",
        "update-deps": "pnpm dlx npm-check-updates --configFileName .ncurc.json",
        "lint": "eslint \"**/*.{js,jsx,ts,tsx}\"",
        "lint:fix": "eslint \"**/*.{js,jsx,ts,tsx}\" --fix",
        "format:js": "prettier --write \"**/*.{json,js,jsx,ts,tsx}\" --log-level warn",
        "format": "pnpm format:js && cargo fmt",
        "sync-types": "cargo test && pnpm format",
        "preinstall": "pnpm dlx only-allow pnpm",
        "prepare": "husky install",
        "test": "vitest --run",
        "test:ui": "vitest --ui",
        "tauri": "dotenv -e .env -- tauri"
    },
    "dependencies": {
        "@ark-ui/react": "^2.2.3",
        "@egoist/tailwindcss-icons": "^1.7.4",
        "@hookform/resolvers": "^3.3.4",
        "@iconify-json/heroicons": "^1.1.20",
        "@tauri-apps/api": "^1.5.3",
        "@tauri-apps/plugin-autostart": "2.0.0-beta.2",
        "@tauri-apps/plugin-notification": "2.0.0-beta.2",
        "@tauri-apps/plugin-positioner": "2.0.0-beta.2",
        "@tauri-apps/plugin-store": "2.0.0-beta.2",
        "@tauri-apps/plugin-updater": "2.0.0-beta.2",
        "@tauri-apps/plugin-window": "2.0.0-alpha.1",
        "react-dom": "^18.2.0",
        "react-hook-form": "^7.51.2",
        "react": "^18.2.0",
        "tauri-plugin-log-api": "github:tauri-apps/tauri-plugin-log#v1",
        "usehooks-ts": "^3.0.2",
        "wouter": "^3.1.0",
        "zod": "^3.22.4",
        "zustand": "^4.5.2"
    },
    "devDependencies": {
        "@tailwindcss/aspect-ratio": "^0.4.2",
        "@tailwindcss/forms": "^0.5.7",
        "@tailwindcss/typography": "^0.5.12",
        "@tauri-apps/cli": "^1.5.11",
        "@testing-library/react": "^14.2.2",
        "@types/node": "^20.12.3",
        "@types/react-dom": "^18.2.23",
        "@types/react": "^18.2.74",
        "@typescript-eslint/eslint-plugin": "^7.5.0",
        "@typescript-eslint/parser": "^7.5.0",
        "@vitejs/plugin-react": "^4.2.1",
        "@vitest/ui": "^1.4.0",
        "autoprefixer": "^10.4.19",
        "clsx": "^2.1.0",
        "dotenv-cli": "^7.4.1",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-react": "^7.34.1",
        "eslint-plugin-simple-import-sort": "^12.0.0",
        "eslint-plugin-tailwindcss": "^3.15.1",
        "eslint": "^8.57.0",
        "husky": "^9.0.11",
        "jsdom": "^24.0.0",
        "postcss": "^8.4.38",
        "prettier-plugin-tailwindcss": "^0.5.13",
        "prettier": "^3.2.5",
        "tailwind-merge": "^2.2.2",
        "tailwind-scrollbar": "^3.1.0",
        "tailwind-variants": "^0.2.1",
        "tailwindcss-animate": "^1.0.7",
        "tailwindcss": "^3.4.3",
        "typescript": "^5.1.6",
        "vite": "^5.2.7",
        "vitest": "^1.4.0"
    },
    "prettier": {
        "arrowParens": "always",
        "bracketSpacing": true,
        "bracketSameLine": false,
        "printWidth": 100,
        "quoteProps": "consistent",
        "semi": false,
        "singleQuote": true,
        "tabWidth": 2,
        "trailingComma": "es5",
        "useTabs": false,
        "overrides": [
            {
                "files": [
                    "*.html",
                    "*.css",
                    ".sass"
                ],
                "options": {
                    "singleQuote": false
                }
            },
            {
                "files": [
                    "*.json",
                    "*.rs",
                    ".prettierrc"
                ],
                "options": {
                    "tabWidth": 4
                }
            },
            {
                "files": [
                    "*.jsx",
                    "*.tsx",
                    "*.mdx"
                ],
                "options": {
                    "jsxSingleQuote": true
                }
            },
            {
                "files": [
                    "Makefile",
                    "*.mk"
                ],
                "options": {
                    "useTabs": true,
                    "tabWidth": 4
                }
            }
        ]
    }
}
